{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build All Robots",
			"type": "shell",
			"command": "javac",
			"args": [
				"-cp", "../env/libs/robocode.jar",
				"-d", "bin",
				"sample/*.java",
				"sampleex/*.java",
				"samplesentry/*.java",
				"sampleteam/*.java",
				"student/*.java"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$javacc"],
			"detail": "Compile all robot source files to bin directory"
		}
	]
}